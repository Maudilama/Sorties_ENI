{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}
{% block content %}

{% endblock %}

{% block body %}
    <div class="user-profile">
        {% if user.photoFilename %}
            <img src="{{ asset('img/photos/' ~ user.photoFilename) }}" alt="Photo de profil de {{ user.pseudo }}" class="user-photo"/>
        {% else %}
            <img src="{{ asset('img/photos/default-profile.jpg') }}" alt="{{ user.prenom }} {{ user.nom }}" class="user-photo"/>
        {% endif %}
    </div>
    <h1>Modifier mon profil</h1>
    <hr>


    {{ form_start(form, { 'attr': {'enctype': 'multipart/form-data'} }) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a href="{{ path('main_home') }}" class="btn-cancel">Annuler</a>
    {{ form_end(form) }}


{% endblock %}
