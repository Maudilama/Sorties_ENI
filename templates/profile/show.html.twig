{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.pseudo }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Profil de {{ user.pseudo }}</h1>
        <hr>
        <div class="row">
            <div class="col-md-6">
                <h4>Informations personnelles :</h4>
                <table class="table">
                    <tr>
                        <th>Pseudo :</th>
                        <td>{{ pseudo }}</td>
                    </tr>
                    <tr>
                        <th>Prénom :</th>
                        <td>{{ prenom }}</td>
                    </tr>
                    <tr>
                        <th>Nom :</th>
                        <td>{{ nom }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone :</th>
                        <td>{{ telephone }}</td>
                    </tr>
                    <tr>
                        <th>Email :</th>
                        <td>{{ email }}</td>
                    </tr>
                    <tr>
                        <th>Campus :</th>
                        <td>{{ campus }}</td>
                    </tr>
                </table>
                <a href="{{ path('main_home') }}" class="btn-cancel">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}