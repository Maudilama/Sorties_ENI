{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ sortie.nom }}</h1>
        <p>Date de la sortie : {{ sortie.dateSortie|date('d/m/Y H:i') }}</p>
        <p>Campus : {{ sortie.campus.nom }}</p>

        {{ form_start(annulerForm) }}

        {{ form_label(annulerForm.motif, 'Motif') }}
        {{ form_widget(annulerForm.motif) }}
        {{ form_errors(annulerForm.motif) }}

        <div class="mt-3">
            {{ form_widget(annulerForm.save, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_widget(annulerForm.delete, {'attr': {'class': 'btn btn-danger'}}) }}
        </div>

        {{ form_end(annulerForm) }}
    </div>
{% endblock %}