{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ sortie.nom }}</h1>
        <p>Date de la sortie : {{ sortie.dateHeureDebut |date('d/m/Y H:i') }}</p>
        <p>Campus : {{ sortie.campus.nom }}</p>
        <p>Lieu : {{ lieu.rue }} {{ ville.codePostal }} {{ ville.nom }}</p>

        {{ form_start(annulerForm) }}

        {{ form_label(annulerForm.infosSortie) }}
        {{ form_widget(annulerForm.infosSortie) }}
        {{ form_errors(annulerForm.infosSortie) }}

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Annuler la sortie</button>
            <a href="{{ path('main_home') }}" class="btn-cancel">Retour</a>
        </div>

        {{ form_end(annulerForm) }}
    </div>
{% endblock %}